@model IEnumerable<FamousFolks.Models.FolksListViewModel>

@{
    ViewBag.Title = "Index";
}


<link href="~/Content/MyStyle.css" rel="stylesheet" />

<div id="jumbo" class="jumbotron">

    <br />

</div>
<h2 class="text-center">Famous Folks</h2>
<form method="get">

    @*<input type="search" name="searchTerm" />*@
    <input id="mySubmit" type="submit" Value="Search All" class="btn btn-primary" />

    <label class="checkbox-inline">
        <input type="checkbox" id="expertise" value="expertise" name="searchPolitics">Politician
    </label>


</form>

<script src="~/Scripts/jquery-1.10.2.js"></script>



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Expertise)
        </th>
        <th id="myBioh" style="display:none">
            @Html.DisplayNameFor(model => model.Bio)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>

                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthLocation)
            </td>
            <td>

                @Html.DisplayFor(modelItem => item.Expertise)
            </td>
            <td id="myBio" style="display: none">
                @Html.DisplayFor(modelItem => item.Bio)
            </td>

        </tr>
    }

</table>

<script>
    $(document).ready(function () {

        $("tr").click(function () {

            $("tr:eq(" + this.rowIndex + " ) td:eq(4)").toggle();

        });

        $('input[type="checkbox"]').click(function () {
            if ($(this).prop("checked") === true) {
                $("#mySubmit").val("Just Politician");

            }
            else if ($(this).prop("checked") === false) {
                $("#mySubmit").val("Search All");

            }
        });

    });



</script>
